<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@color/white">
    <ImageView
        android:padding="2dp"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/goods_cover"
        android:src="@mipmap/ic_launcher_round"/>
    <LinearLayout
        android:layout_marginTop="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="vertical">
        <TextView
            android:textStyle="bold"
            android:id="@+id/goods_title"
            android:layout_marginBottom="4sp"
            android:textSize="14sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="胜利大街烦死额房间爱搜的sdfasdfasdfsdf叫法京东方水电费水电费"/>
        <TextView
            android:id="@+id/goods_save_money"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:background="@drawable/shap_tag_bg"
            android:textSize="12sp"
            android:text="省15元"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="卷后价："
                android:textColor="@color/colorPrimaryDark"/>
            <!--优惠价-->
            <TextView
                android:id="@+id/goods_special_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="19.80"
                android:textColor="@color/colorPrimaryDark"/>
            <!--原价-->
            <TextView
                android:textSize="11sp"
                android:id="@+id/goods_original_price"
                android:layout_marginLeft="11sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥23"
                android:textColor="@color/colorGrey"/>
            <!--已购人数-->
            <TextView
                android:textSize="12sp"
                android:id="@+id/goods_purchased"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1000已经购买"
                android:layout_marginLeft="10dp"
                android:textColor="@color/colorGrey"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
